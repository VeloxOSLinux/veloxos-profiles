GRUB_DEFAULT=saved
GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="VeloxOS"
GRUB_CMDLINE_LINUX_DEFAULT="quiet splash"
GRUB_CMDLINE_LINUX=""

# If you want to enable the save default function, uncomment the following
# line, and set GRUB_DEFAULT to saved.
GRUB_SAVEDEFAULT=true

# Preload both GPT and MBR modules so that they are not missed
GRUB_PRELOAD_MODULES="part_gpt part_msdos"

# Uncomment to enable Hidden Menu, and optionally hide the timeout count
#GRUB_HIDDEN_TIMEOUT=5
#GRUB_HIDDEN_TIMEOUT_QUIET=true

# Terminal auf Grafik umstellen für Theme-Support
GRUB_TERMINAL_INPUT=console
GRUB_TERMINAL_OUTPUT=gfxterm

# Die Auflösung auf Full-HD festlegen für scharfe Darstellung
GRUB_GFXMODE=1920x1080,auto

# Kernel nutzt dieselbe Auflösung wie GRUB
GRUB_GFXPAYLOAD_LINUX=keep

# Recovery-Modus deaktivieren für einen cleaner Look
GRUB_DISABLE_RECOVERY=true

#--- VELOXOS THEME SETTINGS ---
# Deaktiviere das alte Hintergrund-Bild-System
# GRUB_BACKGROUND="/usr/share/grub/background.png"

# Aktiviere das neue VeloxOS-Theme
GRUB_THEME="/usr/share/grub/themes/VeloxOS-live/theme.txt"

# Standard-Farben werden durch Theme überschrieben (daher auskommentiert)
# GRUB_COLOR_NORMAL="light-gray/black"
# GRUB_COLOR_HIGHLIGHT="green/black"
#------------------------------

# Uncomment to get a beep at GRUB start
#GRUB_INIT_TUNE="480 440 1"
